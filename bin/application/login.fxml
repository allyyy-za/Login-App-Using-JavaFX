<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #ccffff;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.loginController">
   <children>
      <Label fx:id="isConnected" layoutX="88.0" layoutY="85.0" prefHeight="48.0" prefWidth="230.0" text="Status" textFill="#161616">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtusername" layoutX="90.0" layoutY="152.0" promptText="Username">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtpassword" layoutX="88.0" layoutY="205.0" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
      </PasswordField>
      <Button fx:id="button1" layoutX="221.0" layoutY="270.0" mnemonicParsing="false" onAction="#Login" prefHeight="18.0" prefWidth="90.0" style="-fx-border-color: #4CAF50; -fx-border-width: 2px;" text="Login">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font>
      </Button>
      <Label layoutX="60.0" layoutY="14.0" prefHeight="56.0" prefWidth="360.0" text="AB Company Login" underline="true">
         <font>
            <Font name="Berlin Sans FB" size="36.0" />
         </font>
      </Label>
      <Button fx:id="button3" layoutX="243.0" layoutY="349.0" mnemonicParsing="false" onAction="#NewUser" prefHeight="26.0" prefWidth="162.0" style="-fx-border-color: #3399ff; -fx-border-width: 2px;" text="New User">
         <font>
            <Font name="Berlin Sans FB" size="16.0" />
         </font></Button>
      <Button fx:id="button2" layoutX="38.0" layoutY="349.0" mnemonicParsing="false" onAction="#Error" prefHeight="26.0" prefWidth="162.0" style="-fx-border-color: #ff4d4d; -fx-border-width: 2px;" text="Error in Login">
         <font>
            <Font name="Berlin Sans FB" size="17.0" />
         </font></Button>
   </children>
</AnchorPane>
